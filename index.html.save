                calculateTargetBtn.onclick = () => {
                    if (simState.target) return;
                    simState.target = true;
                    const chart = window.reversalSimulatorChartInstance;
                    const annotations = chart.options.plugins.annotation.annotations;
                    const height = isDoubleTop ? Math.max(...reversalData.priceDoubleTop.slice(0, 9)) - annotations.neckline.yMin : annotations.neckline.yMin - Math.min(...reversalData.priceDoubleBottom.slice(0,9));

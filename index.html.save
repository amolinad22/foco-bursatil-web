                    simSteps.querySelector('#reversal-step-3').classList.remove('opacity-50');
                    simulateBreakoutBtn.disabled = true;
                    showStoplossBtn.disabled = false;
                };
            }

            if (showStoplossBtn) {
                showStoplossBtn.onclick = () => {
                    if (simState.stoploss) return;
                    simState.stoploss = true;
                    const chart = window.reversalSimulatorChartInstance;
                    const annotations = chart.options.plugins.annotation.annotations;
                    const stopLossPrice = isDoubleTop ? Math.max(...reversalData.priceDoubleTop.slice(0, 9)) + 2 : Math.min(...reversalData.priceDoubleBottom.slice(0,9)) - 2;

                    annotations.stoploss = {
                        type: 'line', xMin: 9.5, xMax: 19, yMin: stopLossPrice, yMax: stopLossPrice, borderColor: 'rgb(239, 68, 68)', borderWidth: 2, borderDash: [6, 6], label: { content: 'Stop-Loss', enabled: true, position: 'start', backgroundColor: 'rgba(0,0,0,0)', color: 'rgb(239, 68, 68)' }
